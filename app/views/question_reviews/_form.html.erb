    <%= form.label :ユーザーＩＤ %>
    <%= form.number_field :user_code %>
  </div>

  <div class="field">
    <%= form.label :内容 %>
    <%= form.text_field :contents %>
  </div>

  <div class="field">
    <%= form.label :best_flag %>
    <%= form.number_field :best_flag %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
