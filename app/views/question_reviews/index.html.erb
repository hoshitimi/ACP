<p id="notice"><%= notice %></p>

<h1>質問回答画面</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>User code</th>
      <th>Contents</th>
      <th>Best flag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @question_reviews.each do |question_review| %>
      <tr>
        <td><%= question_review.question_code %></td>
        <td><%= question_review.user_code %></td>
        <td><%= question_review.contents %></td>
        <td><%= question_review.best_flag %></td>
        <td><%= link_to 'Show', question_review %></td>
        <td><%= link_to 'Edit', edit_question_review_path(question_review) %></td>
        <td><%= link_to 'Destroy', question_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

