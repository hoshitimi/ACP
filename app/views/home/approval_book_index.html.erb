<p id="notice"><%= notice %></p>

<table border="1">
  <thead>
    <tr>
      <th>書籍名</th>
      <th>著者名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author_name %></td>
        <td><%= link_to '詳細', book %></td>
        <td><%= link_to '編集', edit_book_path(book) %></td>
        <td><%= link_to '削除', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= button_to '承認', {controller: 'home', action: 'approval_book'},{} %>
      </tr>
    <% end %>
  </tbody>
</table>

