<p id="notice"><%= notice %></p>
<p>
  <strong>書籍名:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>著者名:</strong>
  <%= @book.author_name %>
</p>

<p>
  <strong>分類番号:</strong>
  <%= @book.book_number %>
</p>

<p>
  <strong>フラグ:</strong>
  <%= @book.flag %>
</p>

 form_with model: @post, url:search_path, method :get, local: true do |form|
  form.select :keyword [['新着順', 'new'],
                         ['good数が多い順', 'likes'],]
  form.submit
<% @book_reviews.each do |c| %>
  <p>
  <%= c.user_id %>
  <br>
  <%= c.created_at %>
  <br>
  <%= form_tag('/good_add') do %>
    <%= hidden_field :good, :book_review_code, :value => c.id %>
    <p>
    <%= submit_tag "　good" %><%= c.good %>
    </p>
  <% end %>
  <br>
  <%= c.comment %>
  </p>
<% end %>

