<p id="notice"><%= notice %></p>

<h1>本の検索</h1>

<%= form_tag('/books_search') do %>
  <p>
  書籍名
  <br>
  <%= text_field_tag 'search[title]' %>

  著者名
  <br>
  <%= text_field_tag 'search[author_name]' %><%= submit_tag '検索' %>
  </p>
  <% end %>
<table>
  <thead>
    <tr>
      <th>書籍名</th>
      <th>著者名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author_name %></td>
        <td><%= link_to '詳細', book %></td>
        <td><%= link_to '編集', edit_book_path(book) %></td>
        <td><%= link_to '削除', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '本の新規登録', new_book_path %>
