<p id="notice"><%= notice %></p>
<center>
<h1 class="font1">本の検索</h1>
<%= form_tag('/books_search') do %>
  <p>
書籍名 　　　　　　　　　 著者名
  <br>
  <%= text_field_tag 'search[title]' %>

  <%= text_field_tag 'search[author_name]' %><%= submit_tag '検索' %>
  </p>
  <% end %>
<table border="1" class="hyou">
  <thead>
    <tr>
      <th>書籍名</th>
      <th>著者名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author_name %></td>
        <td><%= link_to '詳細', book %></td>
        <td><%= link_to '編集', edit_book_path(book) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p><%= button_to '本の新規登録', '/books/new',method: :get %></p>
<p><div class="button"><%= button_to 'ホームに戻る','/home/top', method: :get %></div></p>
</center>