<p id="notice"><%= notice %></p>

<center>
<h2>ポイント状況一覧</h2>
<h2><%=session[:login_user_acount] %>の現在のポイント数：<%= session[:login_user_point] %></h2>

<table border = "1" class="rei">
  <thead>
    
    <tr>
      <th>日付</th>
      <th>概要</th>
      <th>増減ポイント数</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @points.each do |point| %>
      <tr>
        <td><%= point.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= point.summary %></td>
        <td><%= point.fluctuation %></td>
        <td><%= link_to '詳細', point %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @points %>
</center>
<br>
<p><%= button_to 'ホームに戻る','/home/top', method: :get %></p>
