<h1>ポイント状況一覧</h1>
<h2>あなたの現在のポイントは pです</h2>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>概要</th>
      <th>増減ポイント数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @points.each do |point| %>
      <tr>
        <td><%= point.user_id %></td>
        <td><%= point.fluctuation %></td>
        <td><%= point.summary %></td>
        <td><%= link_to 'Show', point %></td>
        <td><%= link_to 'Edit', edit_point_path(point) %></td>
        <td><%= link_to 'Destroy', point, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

