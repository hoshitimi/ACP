<p id="notice"><%= notice %></p>

<h1>ポイント状況一覧</h1>
<h2>あなたの現在のポイント数：<%= session[:login_user_point] %></h2>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>増減ポイント数</th>
      <th>概要</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @points.each do |point| %>
      <tr>
        <td><%= point.user_id %></td>
        <td><%= point.fluctuation %></td>
        <td><%= point.summary %></td>
        <td><%= link_to '詳細', point %></td>
        <td><%= link_to '編集', edit_point_path(point) %></td>
        <td><%= link_to '削除', point, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to '新しいポイント状況追加', new_point_path %>
<p><%= link_to 'ホーム画面へ', home_top_path %></p>
