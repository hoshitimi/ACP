<p id="notice"><%= notice %></p>

<h1>Book Reviews</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>book</th>
      <th>User</th>
      <th>ユーザーアカウント</th>
      <th>レビュー</th>
      <th>good数</th>
      <th>承認</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book_reviews.each do |book_review| %>
      <tr>
        <td><%= book_review.book_id %></td>
        <td><%= book_review.user_id %></td>
        <td><%= book_review.user_acount %></td>
        <td><%= book_review.comment %></td>
        <td><%= book_review.good %></td>
        <td><%= book_review.flag %></td>
        <td><%= link_to '詳細', book_review %></td>
        <td><%= link_to '編集', edit_book_review_path(book_review) %></td>
        <td><%= link_to '削除', book_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しいレビュー', new_book_review_path %>
