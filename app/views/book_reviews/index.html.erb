<p id="notice"><%= notice %></p>

<h1>Book Reviews</h1>

<%= form_tag('/books_search') do %>
  <p>
  書籍名か著者名
  <br>
  <%= text_field_tag 'searh[title]' %><%= submit_tag '検索' %>
  </p>
  <% end %>
<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th>Book</th>
      <th>User</th>
      <th>Comment</th>
      <th>Good</th>
      <th>Flag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book_reviews.each do |book_review| %>
      <tr>
        <td><%= book_review.comment_id %></td>
        <td><%= book_review.book_id %></td>
        <td><%= book_review.user_id %></td>
        <td><%= book_review.comment %></td>
        <td><%= book_review.good %></td>
        <td><%= book_review.flag %></td>
        <td><%= link_to 'Show', book_review %></td>
        <td><%= link_to 'Edit', edit_book_review_path(book_review) %></td>
        <td><%= link_to 'Destroy', book_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book Review', new_book_review_path %>
