<p id="notice"><%= notice %></p>

<center>
  <h1>しつもんひろば</h1><br>
  <%= form_tag('/questions_search') do %>
    <p>
    カテゴリー別に検索できます
    <br>
    <%= select_tag 'search[category]', options_for_select(QuestionCategory.all.map { |q| [q.category_name] }, ), include_blank: true %><%= submit_tag '検索' %>
    </p>
  <% end %>
  <p>
    <div class='fixed_btn'>
      <%= button_to '質問をする', {controller: 'questions', action: 'new'}, {method: :get } %>
    </div>
  </p>
  

<p>
  <table border="1">
    <thead>
      <tr>
        <th>ユーザー</th>
        <th>タイトル</th>
        <th>カテゴリ</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @questions.each do |question| %>
        <tr>
          <td><%= question.user_code %></td>
          <td class="titel_font" ><%= link_to question.title, question %></td>
          <td><%= question.category %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</p>
</center>
<p><%= button_to 'ホームに戻る','/home/top', method: :get %></p>

<br>


