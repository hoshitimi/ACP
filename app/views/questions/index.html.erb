<p id="notice"><%= notice %></p>

<center><h1>しつもんひろば</h1></center><br>
<center><%= link_to '質問をする', new_question_path %></center><br>

<center>
  <table>
    <thead>
      <tr>
        <th>ユーザー</th>
        <th>タイトル</th>
        <th>カテゴリ</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @questions.each do |question| %>
        <tr>
          <td><%= question.user_code %></td>
          <td><%= question.title %></td>
          <td><%= question.category %></td>
          <td><%= link_to '詳細', question %></td>
          <td><%= link_to '編集', edit_question_path(question) %></td>
          <td><%= link_to '削除', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</center>

<br>


